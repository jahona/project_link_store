<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        <title>Link Management</title>

        <link rel="stylesheet" type="text/css" href="css/style.css">
    </head>
    <body>
        <nav class="navbar navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Link Management</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                        <a class="nav-link" href="#">My Info</a>
                    </div>
                </div>
            </div>
        </nav>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

        <div class="container input-link-main">
            <div class="input-link-main__inputBox input-group shadow">
                <input id="input-url" class="input-link-main__inputBox--input form-control form-control-lg" type="text" placeholder="please input link for management">
                <button id="btn-send" class="input-link-main__inputBox--btn btn btn-outline-secondary btn-lg" type="button">Go</button>
            </div>
        </div>
        
        <script>
          window.addEventListener("load", function(event) {
              try {
                const btn = document.getElementById('btn-send');
                btn.onclick = () => {
                  const data = {};
                  const input = document.getElementById('input-url')
                  data.link = input.value;
                  insertPage(data)
                      .then((res) => {
                          console.log(res);
                          alert('입력하였습니다.');
                          input.value = '';
                      })
                      .catch((err) => {
                          console.log(err);
                          input.value = '';
                      });
                };
                document.getElementById('input-url').addEventListener('keyup', (event) => {
                  if (event.keyCode === 13) {
                      event.preventDefault();
                      btn.click();
                  }
                });
              } catch (err) {
                  console.log('[Error] DOM');
              }
          });
        </script>

        <script src='./js/request.js'></script>
        <script>
            function isValidationLink(uri) {
              var expUrl = /^http[s]?\:\/\//i;
              return expUrl.test(uri);
            }

            function insertPage(data) {
                return new Promise((resolve, reject) => {
                    if (!isValidationLink(data.link)) {
                        alert('URL 형식이 아닙니다.');
                        return reject('Invalid URL');
                    }
                    
                    var option = {};
                    option.body = {
                        link: data.link,
                    };

                    _request.post('http://localhost:3000/page', option, (err, res) => {
                        if (err) {
                            reject(err);
                        } else {
                            resolve(res);
                        }
                    });
                }); 
            }
        </script>
    </body>
</html>